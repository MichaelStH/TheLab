<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="cityWeather"
            type="com.riders.thelab.data.local.model.weather.CityWeather" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/detail_backdrop_height"
        android:background="@color/dark_grey"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:background="@color/oil"
        tools:layout_height="@dimen/detail_backdrop_height">

        <!-- Weather Data Container -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/weather_data_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/left_guideline"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.1" />


            <!-- Weather icon -->
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/iv_weather_icon"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:adjustViewBounds="true"
                android:scaleType="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/left_guideline"
                app:layout_constraintTop_toTopOf="parent"
                tools:src="@drawable/ic_wind_east" />
            <!-- Weather icon -->


            <!-- Weather Temperature icon -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/temperature_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/extra_small_margin"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/iv_weather_icon"
                app:layout_constraintTop_toTopOf="parent">


                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tv_weather_city_temperature"
                    style="@style/TextAppearance.AppCompat.Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="48sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/tv_degree_placeholder"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="2"
                    tools:textColor="@color/white" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tv_degree_placeholder"
                    style="@style/TextAppearance.AppCompat.Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/extra_small_margin"
                    android:text="@string/degree_placeholder"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/tv_weather_city_temperature"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>
            <!-- Weather Temperature icon -->


            <!-- Weather City data -->
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_weather_city_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/medium_margin"
                android:text="@{cityWeather.cityName}"
                android:textColor="@color/white"
                app:layout_constraintBottom_toTopOf="@id/middle_guideline"
                app:layout_constraintStart_toEndOf="@id/temperature_container"
                tools:text="Paris, " />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_weather_city_country"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{cityWeather.cityCountry}"
                android:textColor="@color/white"
                app:layout_constraintBottom_toTopOf="@id/middle_guideline"
                app:layout_constraintStart_toEndOf="@id/tv_weather_city_name"
                tools:text="FR" />
            <!-- Weather City data -->


            <!-- Weather Description -->
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_weather_main_description"
                style="@style/TextAppearance.AppCompat.Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/medium_margin"
                android:text="@{cityWeather.cityWeatherDescription}"
                android:textColor="@color/white"
                app:layout_constraintStart_toEndOf="@id/temperature_container"
                app:layout_constraintTop_toBottomOf="@id/middle_guideline"
                tools:text="light rain, " />
            <!-- Weather Description -->

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/middle_guideline"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.5" />


            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/right_guideline"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.9" />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <!-- Weather Data Container -->

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminateOnly="true"
            android:indeterminateTint="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="UnusedAttribute"
            tools:visibility="gone" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>