<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/detail_backdrop_height"
    android:background="?android:attr/colorBackground"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:background="@color/default_dark">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_news_title"
        style="@style/TextAppearance.AppCompat.Large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/big_margin"
        android:text="Discover the last 3 features"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:textColor="@color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="@dimen/medium_margin"
        android:layout_marginVertical="@dimen/big_margin"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_news_title">

        <!-- First Item -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/news_card_view_1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/small_margin"
            android:layout_weight="1"
            app:cardCornerRadius="@dimen/small_margin"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true"
            tools:background="@color/default_dark">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/news_image_view_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/big_medium_margin"
                android:layout_marginLeft="@dimen/big_medium_margin"
                android:layout_marginEnd="-16dp"
                android:layout_marginRight="-16dp"
                android:padding="@dimen/big_margin"
                android:scaleType="centerCrop"
                tools:background="@color/default_dark"
                tools:srcCompat="@drawable/ic_fingerprint" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/ultra_big_margin"
                    android:background="@drawable/maps_loading_gradient" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/news_text_view_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:textColor="@color/white"
                    tools:text="Recycler" />
            </RelativeLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Second Item -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/news_card_view_2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/small_margin"
            android:layout_weight="1"
            app:cardCornerRadius="@dimen/small_margin"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true"
            tools:background="@color/default_dark">


            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/news_image_view_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/big_medium_margin"
                android:layout_marginLeft="@dimen/big_medium_margin"
                android:layout_marginEnd="-16dp"
                android:layout_marginRight="-16dp"
                android:padding="@dimen/big_margin"
                android:scaleType="centerCrop"
                tools:background="@color/default_dark"
                tools:srcCompat="@drawable/ic_filter_list" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/ultra_big_margin"
                    android:background="@drawable/maps_loading_gradient" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/news_text_view_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:textColor="@color/white"
                    tools:text="Recycler" />
            </RelativeLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Third Item -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/news_card_view_3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/small_margin"
            android:layout_weight="1"
            app:cardCornerRadius="@dimen/small_margin"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true"
            tools:background="@color/default_dark">


            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/news_image_view_3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/big_medium_margin"
                android:layout_marginLeft="@dimen/big_medium_margin"
                android:layout_marginEnd="-16dp"
                android:layout_marginRight="-16dp"
                android:padding="@dimen/big_margin"
                android:scaleType="centerCrop"
                tools:background="@color/default_dark"
                tools:srcCompat="@drawable/ic_open_in_new" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/ultra_big_margin"
                    android:background="@drawable/maps_loading_gradient" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/news_text_view_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:textColor="@color/white"
                    tools:text="Recycler" />
            </RelativeLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>