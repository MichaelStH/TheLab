<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="@color/oil">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Thumbnail container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2.25"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/multi_pane_movie_item_image_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/extra_big_margin"
                android:adjustViewBounds="true"
                android:scaleType="centerInside"
                tools:src="@drawable/mission_impossible" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/extra_small_margin"
            android:layout_marginStart="@dimen/big_margin"
            android:layout_marginTop="@dimen/small_margin"
            android:layout_marginEnd="@dimen/big_margin"
            android:layout_marginBottom="@dimen/small_margin"
            android:background="@drawable/separator_view_gradient" />

        <!-- Info container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingStart="@dimen/medium_margin"
            android:paddingTop="@dimen/big_margin"
            android:paddingEnd="@dimen/medium_margin"
            android:paddingBottom="@dimen/big_margin">

            <TextView
                android:id="@+id/multi_pane_movie_item_title_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/multipane_row_title_placeholder"
                android:textColor="@color/white"
                android:textSize="36sp"
                android:textStyle="bold"
                tools:text="@string/multipane_row_title_placeholder"
                tools:textColor="@color/white" />

            <TextView
                android:id="@+id/multi_pane_movie_item_genre_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/multipane_row_genre_placeholder"
                android:textSize="24sp"
                tools:text="@string/multipane_row_genre_placeholder" />

            <TextView
                android:id="@+id/multi_pane_movie_item_year_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/medium_margin"
                android:hint="@string/multipane_row_year_placeholder"
                android:textColor="@color/year"
                android:textSize="36sp"
                tools:text="@string/multipane_row_year_placeholder" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>