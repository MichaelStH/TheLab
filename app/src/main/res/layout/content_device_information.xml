<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingStart="24dp"
    android:paddingTop="16dp"
    android:paddingEnd="24dp"
    android:paddingBottom="16dp">

    <!-- Devices Specs Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/device_information_card_gradient"
        android:orientation="vertical">


        <!-- Devices Specs Card View -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:outlineSpotShadowColor="@color/purple_700"
            app:cardBackgroundColor="@color/default_dark"
            app:cardCornerRadius="@dimen/small_margin"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true"
            app:elevation="@dimen/small_margin"
            tools:ignore="UnusedAttribute">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/medium_margin">

                <!-- Device Specifications -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.google.android.material.textview.MaterialTextView
                        style="@style/TextAppearance.AppCompat.Display1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/device_specification_header"
                        android:textColor="@color/white"
                        android:textStyle="normal" />
                </LinearLayout>

                <!-- Device Info -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Name -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="@dimen/small_margin"
                        android:paddingBottom="@dimen/small_margin">

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/device_info_device_name_placeholder"
                            android:textColor="@color/white" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/tv_device_name"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="@color/white"
                            tools:text="@string/device_info_device_name_placeholder" />
                    </LinearLayout>

                    <!-- Brand -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="@dimen/small_margin"
                        android:paddingBottom="@dimen/small_margin">

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/device_info_device_brand_placeholder"
                            android:textColor="@color/white" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/tv_device_brand"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="@color/white"
                            tools:text="@string/device_info_device_brand_placeholder" />
                    </LinearLayout>

                    <!-- Model -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="@dimen/small_margin"
                        android:paddingBottom="@dimen/small_margin">

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/device_info_device_model_placeholder"
                            android:textColor="@color/white" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/tv_device_model"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="@color/white"
                            tools:text="@string/device_info_device_model_placeholder" />
                    </LinearLayout>

                    <!-- Hardware -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="@dimen/small_margin"
                        android:paddingBottom="@dimen/small_margin">

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/device_info_device_hardware_placeholder"
                            android:textColor="@color/white" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/tv_device_hardware"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="@color/white"
                            tools:text="@string/device_info_device_hardware_placeholder" />
                    </LinearLayout>

                    <!-- Screen Dimensions -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="@dimen/small_margin"
                        android:paddingBottom="@dimen/small_margin">

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/device_info_device_screen_dimensions_placeholder"
                            android:textColor="@color/white" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/tv_device_screen_dimensions"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="@color/white"
                            tools:text="@string/device_info_device_screen_dimensions_placeholder" />
                    </LinearLayout>

                    <!-- Serial -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="@dimen/small_margin"
                        android:paddingBottom="@dimen/small_margin">

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/device_info_device_serial_placeholder"
                            android:textColor="@color/white" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/tv_device_serial"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="@color/white"
                            tools:text="@string/device_info_device_serial_placeholder" />
                    </LinearLayout>

                    <!-- FingerPrint -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="@dimen/small_margin"
                        android:paddingBottom="@dimen/small_margin">

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/device_info_device_fingerprint_placeholder"
                            android:textColor="@color/white" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/tv_device_fingerprint"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="@color/white"
                            tools:text="@string/device_info_device_fingerprint_placeholder" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>


    <!-- Android Specs Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/medium_margin"
        android:background="@drawable/device_information_card_gradient"
        android:orientation="vertical">

        <!-- Android Specs Card View -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:outlineSpotShadowColor="@color/purple_700"
            app:cardBackgroundColor="@color/default_dark"
            app:cardCornerRadius="@dimen/small_margin"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true"
            app:elevation="@dimen/small_margin"
            tools:ignore="UnusedAttribute">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/medium_margin">

                <!-- Android Specifications -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.google.android.material.textview.MaterialTextView
                        style="@style/TextAppearance.AppCompat.Display1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/device_android_specification_header"
                        android:textColor="@color/white"
                        android:textStyle="normal" />
                </LinearLayout>

                <!-- Android Info -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Android Name -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="@dimen/small_margin"
                        android:paddingBottom="@dimen/small_margin">

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/device_android_name_placeholder"
                            android:textColor="@color/white" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/tv_device_android_name"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="@color/white"
                            tools:text="@string/device_android_name_placeholder" />
                    </LinearLayout>

                    <!-- SDK Int -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="@dimen/small_margin"
                        android:paddingBottom="@dimen/small_margin">

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/device_android_sdk_version_placeholder"
                            android:textColor="@color/white" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/tv_device_android_sdk"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="@color/white"
                            tools:text="@string/device_android_sdk_version_placeholder" />
                    </LinearLayout>

                    <!-- Release -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="@dimen/small_margin"
                        android:paddingBottom="@dimen/small_margin">

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/device_android_release_placeholder"
                            android:textColor="@color/white" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/tv_device_android_release"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="@color/white"
                            tools:text="@string/device_android_release_placeholder" />
                    </LinearLayout>

                    <!-- Rooted -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="@dimen/small_margin"
                        android:paddingBottom="@dimen/small_margin">

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/device_android_rooted_placeholder"
                            android:textColor="@color/white" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/tv_device_android_rooted"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="@color/white"
                            tools:text="@string/device_android_rooted_placeholder" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>

</LinearLayout>