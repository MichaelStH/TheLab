<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/detail_backdrop_height"
    android:background="?android:attr/colorBackground"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:background="@color/oil"
    tools:layout_height="@dimen/detail_backdrop_height">

    <!-- Weather Data Linear -->
    <LinearLayout
        android:id="@+id/weather_data_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone"
        tools:visibility="visible">

        <!-- Weather icon container -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/medium_margin"
            android:layout_marginLeft="@dimen/medium_margin"
            android:layout_marginEnd="@dimen/extra_small_margin"
            android:layout_marginRight="@dimen/extra_small_margin"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <!-- Weather icon -->
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/iv_weather_icon"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:adjustViewBounds="true"
                android:scaleType="center"
                tools:src="@drawable/weather_cloudy" />
            <!-- Weather icon -->
        </LinearLayout>
        <!-- Weather icon container -->

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical|end"
            android:orientation="horizontal">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_weather_city_temperature"
                style="@style/TextAppearance.AppCompat.Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/extra_small_margin"
                android:layout_marginLeft="@dimen/extra_small_margin"
                android:textSize="48sp"
                tools:text="2"
                tools:textColor="@color/white" />

            <com.google.android.material.textview.MaterialTextView
                style="@style/TextAppearance.AppCompat.Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/extra_small_margin"
                android:layout_marginLeft="@dimen/extra_small_margin"
                android:text="@string/degree_placeholder"
                android:textSize="20sp"
                tools:textColor="@color/white" />
        </LinearLayout>


        <!-- Weather city info container -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/medium_margin"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <!-- City Country Container -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/extra_small_margin"
                android:layout_marginBottom="@dimen/extra_small_margin"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tv_weather_city_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Paris, "
                    tools:textColor="@color/white" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tv_weather_city_country"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="FR"
                    tools:textColor="@color/white" />
            </LinearLayout>
            <!-- City Country Container -->

            <!-- Weather info Container -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/extra_small_margin"
                android:layout_marginBottom="@dimen/extra_small_margin"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tv_weather_main_description"
                    style="@style/TextAppearance.AppCompat.Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="light rain, "
                    tools:textColor="@color/white" />
            </LinearLayout>
            <!-- Weather info Container -->
        </LinearLayout>
        <!-- Weather city info container -->
    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminateOnly="true"
        android:indeterminateTint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="gone" />

</androidx.constraintlayout.widget.ConstraintLayout>