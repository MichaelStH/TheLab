<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/oil">

    <!-- Thumbnail container -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@id/separator_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ProgressBar
            android:id="@+id/multi_pane_movie_loader_image"
            style="@style/Widget.MaterialComponents.CircularProgressIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone"
            tools:visibility="visible" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/multi_pane_movie_image_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/extra_big_margin"
            android:adjustViewBounds="true"
            android:maxHeight="350dp"
            android:scaleType="fitCenter"
            tools:src="@drawable/logo_colors" />
    </RelativeLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/separator_guideline"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.75" />

    <View
        android:id="@+id/separator_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/extra_small_margin"
        android:layout_marginStart="@dimen/big_margin"
        android:layout_marginTop="@dimen/small_margin"
        android:layout_marginEnd="@dimen/big_margin"
        android:layout_marginBottom="@dimen/small_margin"
        android:background="@drawable/separator_view_gradient"
        app:layout_constraintBottom_toBottomOf="@id/separator_guideline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/separator_guideline" />

    <!-- Info container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingStart="@dimen/medium_margin"
        android:paddingTop="@dimen/medium_margin_tablet"
        android:paddingEnd="@dimen/medium_margin"
        android:paddingBottom="@dimen/extra_small_margin_tablet"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/separator_view">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/multi_pane_movie_title_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/multipane_row_title_placeholder"
            android:textColor="@color/white"
            android:textSize="32sp"
            android:textStyle="bold"
            tools:text="@string/multipane_row_title_placeholder"
            tools:textColor="@color/white" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/multi_pane_movie_genre_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/multipane_row_genre_placeholder"
            android:textColor="@color/jumbo"
            android:textSize="20sp"
            tools:text="@string/multipane_row_genre_placeholder" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/multi_pane_movie_year_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/medium_margin"
            android:hint="@string/multipane_row_year_placeholder"
            android:textColor="@color/year"
            android:textSize="32sp"
            tools:text="@string/multipane_row_year_placeholder" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
